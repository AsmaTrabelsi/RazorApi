@page
@model RazorApi.Pages.Categories.CreateModel
@{
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Create category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="category.Name"></label>
            <input asp-for="@Model.category.Name" class="form-control"/>
            <span asp-validation-for="@Model.category.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="category.DisplayOrder"></label>
            <input class="form-control" asp-for="@Model.category.DisplayOrder" />
            <span asp-validation-for="@Model.category.DisplayOrder" class="text-danger"></span>

        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">
            Create
        </button>
    </div>

</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}
